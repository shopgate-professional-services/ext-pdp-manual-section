{
  "version": "1.0.0",
  "id": "@shopgate-project/pdp-manual-section",
  "components": [
    {
      "id": "OpenPdfFiles",
      "type": "portals",
      "path": "frontend/portals/ProductDescriptionAfter",
      "target": "product.description.after"
    },
    {
      "type": "translations",
      "path": "frontend/locale/en-US.json",
      "id": "locale/en-US"
    },
    {
      "type": "translations",
      "path": "frontend/locale/de-DE.json",
      "id": "locale/de-DE"
    }
  ],
  "configuration": {
    "sectionTitle": {
      "type": "admin",
      "destination": "frontend",
      "default": "Manuals",
      "params": {
        "type": "text",
        "label": "Label for the section title"
      }
    },
    "manualsProperty": {
      "type": "admin",
      "destination": "frontend",
      "default": "Downloads",
      "params": {
        "required": true,
        "type": "text",
        "label": "Name of product property which contains manuals urls"
      }
    },
    "manualsPrefixUrl": {
      "type": "admin",
      "destination": "frontend",
      "default": null,
      "params": {
        "required": true,
        "type": "text",
        "label": "Prefix url of where to find the manuals files"
      }
    },
    "typeIndices": {
      "type": "admin",
      "destination": "frontend",
      "default": null,
      "params": {
        "required": true,
        "type": "json",
        "label": "Value for type indices"
      }
    },
    "propertySplit": {
      "type": "admin",
      "destination": "frontend",
      "default": "\n",
      "params": {
        "required": true,
        "type": "text",
        "label": "Text for spliting Property value"
      }
    }
  }
}
